<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= @user.errors.count %> user
      <%= 'error'.pluralize(@user.errors.count) %>
       prohibited your information from being saved:
    </h3>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>* <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <h2>Sign up</h2>
</div>

<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.text_field :name, placeholder: 'Name', value: @user.name %><br />
  </div>
  <div class='field' >
    <%= f.password_field :password, placeholder: 'Password' %><br />
  </div>
  <div class='field'>
    <%= f.password_field :password_confirmation,
    placeholder: 'Password Confirmation' %>
  </div><br />
  <div class='actions'>
    <%= f.submit 'Sign up', class: "btn btn-primary" %><br />
  </div>
<% end %>

<%= link_to 'Log in', login_path %>
