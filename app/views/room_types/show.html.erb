<div class="center">
  <h1><%= @room_type.name %></h1>
</div>

<div class="row">
  <aside class="col-md-4">
    <div class="photos">
      <%= image_tag(@room_type.photo , alt: @room_type.name,
      size: "760x410") %>
    </div>
  </aside>

  <div class="col-md-8">
    <ol class="room_type">
      <%= render @room_type, amenities: @amenities  %>
    </ol>
  </div>
</div>

<% if current_user && current_user.addresses.present? %>
  <div class="center"><h2>Reserve this Room</h2></div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@reservation,
        url: room_reservations_path(@room_type.room_ids)) do |f| %>
        <div class="col-md-5 col-md-offset-2">
         <%= f.label 'Check in Date' %><br />
         <%= f.date_field :checkin_date %><br />
         <%= f.label 'Check in Time' %><br />
         <%= f.time_field :checkin_time %><br />
        </div>

        <div class="col-md-offset">
         <%= f.label 'Check out Date' %><br />
         <%= f.date_field :checkout_date %><br />
         <%= f.label 'Check out Time' %><br />
         <%= f.time_field :checkout_time %><br />
        </div>

        <div class="col-md-6 col-md-offset-3">
         <center>
           <%= f.label 'Number of Rooms' %>
           <%= f.number_field :number_of_rooms %>
        </center>
         <%= f.hidden_field :room_id %>
         <%= f.hidden_field :user_id %><br />
        
         <center><%= f.submit class: "btn btn-primary" %></center>
        </div>
         <%= f.hidden_field :room_type_id, value: @room_type.id %>
      <% end %>
    </div>
  </div>
<% elsif current_user && current_user.addresses.blank? %>
  <div class="links">
    <strong>
      <%= link_to 'Click Here', new_address_path %> to add your Home Address
    </strong>
  </div>
<% else %>
  <div class="links">
    <strong>
      <%= link_to 'Register', new_user_path %> or
      <%= link_to 'Log in',  login_path %> to make a Reservation
    </strong>
  </div>
<% end %>
