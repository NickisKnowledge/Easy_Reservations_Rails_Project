<div class="center">
  <h1><%= @room_type.name %></h1>
</div>

<div class="row">
  <aside class="col-md-4">
    <div class="photos">
      <%= image_tag(@room_type.photo , alt: @room_type.name,
      size: "760x410") %>
    </div>
  </aside>

  <div class="col-md-8">
    <ol class="room_type">
      <%= render @room_type, amenities: @amenities  %>
    </ol>
  </div>
</div>
