<div class="center">
  <h1><%= @room_type.name %></h1>
</div>

<div class="row">
  <aside class="col-md-4">
    <div class="photos">
      <%= image_tag(@room_type.photo , alt: @room_type.name,
      size: "760x410") %>
    </div>
  </aside>

  <div class="col-md-8">
    <ol class="room_type">
      <li>
        <span class="align_right">
          <h3>
            <strong>Description:</strong>
          </h3>
          <%= @room_type.description %><br />
          <h3>
            <strong>Beds:</strong>
          </h3>
          <%= @room_type.beds %>
          <h3>
            <strong>Room Rate:</strong>
          </h3>
          <% @room_type.rooms.each do |room| %>
            <%= number_to_currency(room.room_rate) %><br />
          <% end %>
        </span>
      </li>
    </ol>
  </div>
</div>
